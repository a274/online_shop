<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:focusableInTouchMode="true"
    android:background="@drawable/background3">

    <LinearLayout
        android:id="@+id/head_search"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="#1C936F"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:paddingTop="5dip">


        <SearchView

            android:id="@+id/search_view"
            style="@android:style/Widget.Material.Light.SearchView"
            android:layout_width="228dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:contextClickable="true"
            android:iconifiedByDefault="false"
            android:queryBackground="#D2FFFFFF"
            android:queryHint="Search"
            android:searchIcon="@android:drawable/ic_search_category_default">

        </SearchView>

        <ImageView
            android:id="@+id/cartButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/cart" />


    </LinearLayout>

    <ListView
        android:id="@+id/messages_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:divider="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:backgroundTint="#FDFFFB"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="#777575"
            android:ems="10"
            android:hint="Enter a message"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:text=""
            android:textColor="#040404"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/send"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/arrow"
            android:clickable="true"
            android:padding="20dp"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lower_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1C936F"
        android:elevation="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/messageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/person" />

        <ImageView
            android:id="@+id/homeButton"
            :elevation="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/message" />
    </LinearLayout>

</LinearLayout>