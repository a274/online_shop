<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHeight_default="wrap"
    app:layout_constraintWidth_default="spread"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >
    <!--android:maxWidth= "25sp"-->

    <RelativeLayout
        android:id="@+id/main_widgets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_default="spread">

        <LinearLayout
            android:id="@+id/head_search"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="#1C936F"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:paddingTop="5dip">


            <SearchView

                android:id="@+id/search_view"
                style="@android:style/Widget.Material.Light.SearchView"
                android:layout_width="228dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:contextClickable="true"
                android:iconifiedByDefault="false"
                android:queryBackground="#D2FFFFFF"
                android:queryHint="Search"
                android:searchIcon="@android:drawable/ic_search_category_default">

            </SearchView>

            <ImageView
                android:id="@+id/cartButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:backgroundTint="@color/white"
                android:elevation="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/cart" />


        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/slider"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_below="@+id/head_search"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:scaleType="centerInside">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img3" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_below="@id/slider">

            <ImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/cucumber" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cucumber"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="3,4$/kg"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buyButton"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/light_green"
                        android:text="Add to Cart"
                        android:elevation="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lower_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#1C936F"
            android:elevation="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/menu" />

            <ImageView
                android:id="@+id/messageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/person" />

            <ImageView
                android:id="@+id/homeButton"
                :elevation="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/message" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>